{
	"compilerOptions": {
		"module": "nodenext",
		"target": "ESNext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"strict": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
